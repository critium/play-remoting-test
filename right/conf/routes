# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Tasks
GET     /tasks                  controllers.Application.tasks
POST    /tasks                  controllers.Application.newTask
POST    /tasks/:id/delete       controllers.Application.deleteTask(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)





GET     /test/:id               controllers.Application.invokeActor(id:Long)
GET     /testF/:id              controllers.Application.invokeActorFuture(id:Long)
GET     /testDC                 controllers.Application.testDynamicCompile
GET     /testj4j                controllers.Application.jade4j
